<section class="clearfix">
  <article class="two_third" id="list_of_soups">
    <h1>Select a soup</h1>

    <ul>
      <% items.each_pair do |key, value| %>
        <li><a href="/<%= key %>/"><%= value[:name] %></a></li>
      <% end %>
    </ul>

  </article>
  <article class="one_third">
    <h1><%= name %></h1>
    <p><%= description %></p>
  </article>
</section><!-- END row -->

<section class="clearfix">
  <article class="one_half">
    <h1>Ingredients</h1>
    <p><%= ingredients %></p>
  </article>
  <article class="one_half">
    <h1>Recipe</h1>
    <p><%= recipe %></p>
  </article>
</section><!-- END row -->